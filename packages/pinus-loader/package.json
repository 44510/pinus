{
	"name": "pinus-loader",
	"version": "1.3.10",
	"main": "./dist/index",
	"types": "./lib/index",
	"files": [
		"dist",
		"lib",
		"test",
		"index.ts"
	],
	"scripts": {
		"build": "tsc",
		"start": "yarn run build && node dist/index",
		"lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts",
		"fix-lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts --fix",
		"test": "yarn run build",
		"cov": "nyc mocha",
		"ci": "yarn run test",
		"gen-api-ref": "node ../../node_modules/typedoc/bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../run/site/public/api-reference/pinus-loader lib/"
	},
	"engines": {
		"node": ">=8.5"
	},
	"dependencies": {
		"@types/node": "^8.5.2",
		"reflect-metadata": "0.1.13"
	},
	"devDependencies": {
		"mocha": "4.1.0",
		"should": "13.2.0",
		"tslint": "5.14.0",
		"typescript": "3.5.2"
	}
}
